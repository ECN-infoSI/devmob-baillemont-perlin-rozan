<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Récapitulatif des révisions"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/total_hours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total heures de révision: 0"
        android:textSize="18sp"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/weekly_hours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Heures cette semaine: 0"
        android:textSize="18sp"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/most_revised_subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Matière la plus révisée: Aucune"
        android:textSize="18sp"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/least_revised_subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Matière la moins révisée: Aucune"
        android:textSize="18sp"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/revisions_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Récapitulatif des séances de révision"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <LinearLayout
        android:id="@+id/revisions_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>

</LinearLayout>